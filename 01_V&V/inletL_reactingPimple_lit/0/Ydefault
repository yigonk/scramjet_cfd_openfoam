FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      Ydefault;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    P.Inlet
    {
        // Inlet is pure air
        type        fixedValue;
        value       uniform 1;
    }

    P.Outlet
    {
        // Let outlet value be set by interior
        type        zeroGradient;
    }

    Farfield
    {
        // Freestream: also pure air
        type        fixedValue;
        value       uniform 1;
    }

    Wall
    {
        // No flux of species through inviscid wall
        type        zeroGradient;
    }

    Symmetry
    {
        type        symmetryPlane;
    }

    patch0
    {
        type        empty;
    }

    patch3
    {
        type        empty;
    }
}