FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

// 0.5% turbulence intensity on 792.35 m/s stream ⇒ k ≈ 23.4 m^2/s^2
internalField   uniform 23.4;

boundaryField
{
    P.Inlet
    {
        type        fixedValue;
        value       uniform 23.4;
    }

    P.Outlet
    {
        type        zeroGradient;
    }

    Farfield
    {
        type        zeroGradient;
    }

    Wall
    {
        type            kqRWallFunction;
        value           uniform 1e-10;
    }

    Symmetry
    {
        type        symmetryPlane;
    }

    patch0
    {
        type        empty;
    }

    patch3
    {
        type        empty;
    }
}

// ************************************************************************* //
