FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxScheme   Kurganov;

ddtSchemes
{
    default     Euler;
}

gradSchemes
{
    default     Gauss linear;
}

divSchemes
{
    default     none;
    div(tauMC)  Gauss linear;

    div(phi_nei,U)   Gauss vanLeerV;
    div(phi_own,U)   Gauss vanLeerV;
    div(((rho*nuEff)*dev2(T(grad(U)))))    Gauss linear;

    div(phi_nei,h)   Gauss vanLeer;
    div(phi_own,h)   Gauss vanLeer;
    div(phi_nei,K)   Gauss vanLeer;
    div(phi_own,K)   Gauss vanLeer;
    div(alphaEff*hi,grad(Yi))   Gauss linear;
    div(rhoi*Uri,hi)   Gauss linear;
    div(phi,k)    bounded Gauss upwind;
    div(phi,omega)    bounded Gauss upwind;

    div(phid_nei,p)   Gauss vanLeer;
    div(phid_own,p)   Gauss vanLeer;

    div(phi_nei,Yi)   Gauss vanLeer;
    div(phi_own,Yi)   Gauss vanLeer;
}

laplacianSchemes
{
    default     Gauss linear corrected;
}

interpolationSchemes
{
    default     linear;
    interpolate((rho*U))    linear;

    reconstruct(rho)    vanLeer;
    reconstruct(U)      vanLeerV;
    reconstruct(psi)    vanLeer;
    reconstruct(p)      vanLeer;
    reconstruct(rho*U)  vanLeerV;
    reconstruct(Dp)     vanLeer;

}

snGradSchemes
{
    default     corrected;

}

wallDist
{
    method meshWave;

}

fluxRequired
{
    default none;
    p;
    h;
    Yi;

}

// ************************************************************************* //
